{
    "manifest_version": 3,
    "name": "Krutrim translator",
    "version": "1.0",
    "description": "Select any text, right-click, and translate it to Hindi.",
    "permissions": [
    "contextMenus",
    "scripting",
    "activeTab"
  ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "host_permissions": [
      "*://*/*" 
    ],
    "icons":{
      "16":"icon.png",
      "32":"icon.png",
      "48":"icon.png",
      "128":"icon.png"
    }
  }
  